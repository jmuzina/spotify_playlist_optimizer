html(lang="en")
  title= `${title}`
  link(rel='stylesheet', href='/css/bootstrap.min.css')
  meta(charset="UTF-8")
  div.container.listing-reg

  block content
    body(style = "background-image: url('images/background.jpg'); background-repeat: no-repeat; background-attachment: fixed;")
        div.container
            div.row.h-100
                div.container.justify-content-center.align-self-center(style = "background-color: rgba(20, 20, 20, 0.45); border-radius: 25px;")
                    div.row
                        div.col-md-6.align-self-center.border-right.border-dark
                            img(src="/images/logo.png")
                        div.col-md-6.align-self-center
                            h1(style = "color: white; font-weight: bold; text-shadow: 1px 1px black;")
                                | Tired of skipping song after song in your Spotify playlist?
                            br
                            p(style="color: white; font-weight: bold; text-shadow: 1px 1px black; font-size:24px;")
                                | With just a few clicks, optimize your playlists for your listening tastes!
                            div.row.w-100
                                div.col.justify-content-center
                                    a(class="btn btn-success", href="spotify_auth", role="button" style = "margin-left: 30%; width: 40%;") Login to Spotify
        
