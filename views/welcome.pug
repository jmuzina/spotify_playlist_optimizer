html(lang="en")
  title= `${title}`
  link(rel='stylesheet', href='/css/bootstrap.min.css')
  meta(charset="UTF-8")
  div.container.listing-reg

  block content
    body(style = "background-image: url('/images/background.jpg');")
        div.container
            div.row.h-100
                div.container.justify-content-center.align-self-center(style = "background-color: rgba(20, 20, 20, 0.25); border-radius: 25px;")
                    div.row
                        div.col-md-6.align-self-center
                            img(src="/images/logo.png")
                        div.col-md-6.align-self-center
                            h1
                                | Tired of skipping song after song in your Spotify playlist?
                            br
                            p(style="font-size:24px;")
                                | With just a few clicks, optimize your playlists for your listening tastes!
                            div.row.w-100
                                div.col.justify-content-center
                                    a(class="btn btn-success", href="spotify_auth", role="button") Login to Spotify
    